#create-feature-modal.modal.fade
	.modal-dialog.modal-lg
		.modal-content
			form(name="create-feature-form").create-feature-form
				.modal-header
					button(type="button", data-dismiss="modal", aria-label="Close").close
						span(aria-hidden="true")
							| &times;
					h5.modal-title
						| Create Test Link
				.modal-body
					table.table
						thead
							tr
								th.col-xs-3 Field
								th.col-xs-9 Value
						tbody
							tr
								td Name
								td
									input(name="desc" type="text" required).form-control
							tr
								td Category
								td
									input(name="category" type="checkbox" id="category-popular-new" value="popular")
									label(for="category-popular-new") Popular
									br
									input(name="category" type="checkbox" id="category-preprod-new" value="preprod")
									label(for="category-preprod-new") PreProd
									br
									input(name="category" type="checkbox" id="category-staging-new" value="staging")
									label(for="category-staging-new") Staging
							tr
								td Links
								td
									table.table.table-bordered.table-condensed
										thead
											tr
												th.col-xs-4 Env
												th.col-xs-8 URL
										tbody.links-placeholder
											tr.add-link-tr
												td
													input(name="env" type="text" placeholder="(New Env)")
												td
													input(name="url" type="url" placeholder="(New URL)")
													button(type="button").btn.btn-info.js-add-link-btn.pull-right Add new link
				.modal-footer
					input(type="submit" value="Create link").btn.btn-primary
					button(type="button", data-dismiss="modal").btn.btn-secondary
						| Close